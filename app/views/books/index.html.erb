<h2>Books</h2>

<table>
	<thead>
		<tr>
		<th>Title</th>
		<th>Body</th>
		</tr>
	</thead>
	<tbody>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td>
			<%= link_to "Show", book_path(book), class: 'show_1' %>
		</td>
		<td>
			<%= link_to "Edit", edit_book_path(book), class: 'edit_1' %>
		</td>
		<td>
			<%= link_to "Destroy", destroy_book_path(book), class: 'destroy_1', method: :delete, data: { confirm: '削除しますか'} %>
		</td> 
	</tr>
	<% end %>
	</tbody>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title, class: 'book_title' %>
<h4>Body</h4>
<%= f.text_area :body, class: 'book_body' %>

<%= f.submit 'Create book' %>
<% end %>
